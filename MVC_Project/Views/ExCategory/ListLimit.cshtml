@model List<MVC_Project.Models.totalLimit>

@{
    ViewBag.Title = "ListLimit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List-Limit</h2>

@if (TempData["AlertMsg"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>@TempData["AlertMsg"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
@if (TempData["AlertMssg"] != null)
{
    <div class="alert alert-danger">
        <strong>Failure !</strong>@TempData["AlertMssg"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<table class="table table-bordered">
    <tr class="text-capitalize  text-white text-center" style="background-color:goldenrod">
        <th>Total Limit</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@item.Total_Limit</td>
            <td>
                <a href="@Url.Action("EditLimit",new { item.Id,item.Total_Limit })" class="btn btn-success">Edit</a>
            </td>
        </tr>
    }
</table>

